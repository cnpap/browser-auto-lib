{
  "manifest_version": 3,
  "name": "Browser Auto Plugin",
  "version": "1.0.0",
  "description": "A browser automation plugin that displays hello in the bottom right corner",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
